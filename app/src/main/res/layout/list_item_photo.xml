<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
    >

    <ImageView
        android:id="@+id/list_item_photo_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        />

    <CheckBox
        android:id="@+id/list_item_photo_shared_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_photo_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_photo_shared_check_box"
        android:layout_toRightOf="@id/list_item_photo_image_view"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Photo Title"/>

    <TextView
        android:id="@+id/list_item_photo_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_photo_title_text_view"
        android:layout_toLeftOf="@id/list_item_photo_shared_check_box"
        android:layout_toRightOf="@id/list_item_photo_image_view"
        android:padding="4dp"
        tools:text="Photo Date"/>

    <ImageView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"/>
</RelativeLayout>